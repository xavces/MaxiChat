<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/background">

    <ImageButton
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="41dp"
            android:layout_height="41dp" app:srcCompat="@drawable/paperclips_white"
            android:background="@drawable/btn_file"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteY="674dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/imageButton2"
            android:scaleType="fitCenter"/>

    <EditText
            app:layout_constraintLeft_toRightOf="@id/imageButton2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.83"
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#8C9291"
            android:paddingLeft="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_corner"
            android:id="@+id/editText3"
            android:hint="@string/insert_text"
            android:focusable="auto"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/editText3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHeight_percent="0.85"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"/>

    <ImageButton
            android:layout_width="41dp"
            android:layout_height="41dp"
            app:layout_constraintLeft_toRightOf="@id/editText3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btn_file"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/send"
            android:id="@+id/imageButton3" android:padding="7dp"/>

</android.support.constraint.ConstraintLayout>